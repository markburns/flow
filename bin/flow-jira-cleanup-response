#!/usr/bin/env ruby
# JIRA responses include new lines and other control characters
# and jq doesn't like that
#
# usage:
# echo $response | flow-jira-cleanup-response

a = gets

CONTROL_CHARACTERS = ("\x00".."\x1f").to_a.join('|')
REGEX = /#{CONTROL_CHARACTERS}/.freeze

lines = ''

while a
  lines << a.gsub(REGEX, '')

  a = gets
end

puts lines.gsub("\\\n", '\\\\n')
