#!/usr/bin/env ruby

tags=`flow-tags`.split("\n").map do |tag|
  Gem::Version.new(tag)
end

highest_tag = semvers.last
major, minor, patch = highest_tag.bump.to_s.split(".")

major ||= 0
minor ||= 0
patch ||= 0

tag= [major, minor, patch].join(".")

if ARGV[0]
  puts "Current highest tag is #{highest_tag}"
  puts "would tag with #{tag}"
else
  puts "tagging as #{tag}"
  `git tag v#{tag}`
end
